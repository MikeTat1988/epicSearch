<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ePicSearch.MainPage">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">

        <!-- Start Preparation Button -->
        <Button x:Name="StartPrepBtn" Text="Start Preparation" Clicked="OnStartPrepClicked" />

        <!-- Start Game Button -->
        <Button x:Name="StartGameBtn" Text="Start Game" Clicked="OnStartGameClicked" />

        <!-- Exit App Button -->
        <Button x:Name="ExitAppBtn" Text="Exit App" Clicked="OnExitAppClicked" />

    </StackLayout>
</ContentPage>

