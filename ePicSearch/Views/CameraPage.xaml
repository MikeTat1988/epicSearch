<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:ePicSearch.Helpers"
             x:Class="ePicSearch.Views.CameraPage"
             Title="CameraPage">
    <Grid>
        <Image Source="create_adventure_bg.webp"
               Aspect="AspectFill"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="Center" />
        
        <!-- Treasure Photo Modal -->
        <ContentView x:Name="TreasurePhotoModal"
                     IsVisible="False"
                     BackgroundColor="#CC000000"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Padding="20">
            <Grid VerticalOptions="Center"
                  HorizontalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="150" />
                    <RowDefinition Height="180" />
                    <RowDefinition Height="200" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <ResourceDictionary>
                        <Style x:Key="CommonLabelStyle"
                               TargetType="Label">
                            <Setter Property="FontFamily"
                                    Value="LuckiestGuy" />
                            <Setter Property="FontSize"
                                    Value="24" />
                            <Setter Property="TextColor"
                                    Value="White" />
                            <Setter Property="HorizontalOptions"
                                    Value="Center" />
                            <Setter Property="VerticalOptions"
                                    Value="Center" />
                            <Setter Property="HorizontalTextAlignment" 
                                    Value="Center" />
                            <Setter Property="Shadow">
                                <Shadow Brush="Black"
                                        Offset="2,2"
                                        Radius="2" />
                            </Setter>
                        </Style>
                    </ResourceDictionary>
                </Grid.Resources>

                <Image Source="camera_page_frame.webp"
                       Grid.Row="1"
                       Grid.RowSpan="3"
                       HorizontalOptions="Center" />
                
                <!-- Code Display with Paper Background -->
                <Image Source="code_paper.webp"
                       HorizontalOptions="Center"
                       HeightRequest="120"
                       Rotation="-10"
                       Grid.Row="1">
                    <Image.Shadow>
                        <Shadow Brush="Black"
                                Offset="7,7"
                                Radius="10" />
                    </Image.Shadow>
                </Image>

                <Label x:Name="TreasureCodeLabel"
                       Rotation="-10"
                       FontSize="50"
                       WidthRequest="200"
                       Style="{StaticResource CommonLabelStyle}"
                       Grid.Row="1" />

                <StackLayout Grid.Row="2"
                             VerticalOptions="Center"
                             Rotation="-8">
                    <Label Text="Great!"
                           FontSize="30"
                           Style="{StaticResource CommonLabelStyle}" />
                    <Label Text="Treasure photo"                          
                           Style="{StaticResource CommonLabelStyle}" />
                    <Label Text="captured!"                          
                           Style="{StaticResource CommonLabelStyle}" />
                    <Label Text="Write down the code"
                           Style="{StaticResource CommonLabelStyle}" />
                    <Label Text="And hide it!"
                           Style="{StaticResource CommonLabelStyle}" />
                </StackLayout>

                <!-- Next Clue Button with Press Animation -->
                <Grid HorizontalOptions="Center"
                      VerticalOptions="Center"
                      Grid.Row="3">

                    <controls:NoRippleImageButton x:Name="TreasureNextClueButton"
                                                  BackgroundColor="Transparent"
                                                  Source="next_clue_button.webp"
                                                  WidthRequest="130"
                                                  HeightRequest="150"
                                                  VerticalOptions="Center"
                                                  Rotation="5" />

                    <!-- Progress Bar overlay  -->
                    <ProgressBar x:Name="TreasureLongPressProgress"
                                 Rotation="5"
                                 Progress="0"
                                 ProgressColor="Green"
                                 VerticalOptions="End"
                                 ScaleY="36"
                                 HeightRequest="150"
                                 HorizontalOptions="FillAndExpand"
                                 Opacity="0.8" />
                </Grid>
                <HorizontalStackLayout Spacing="10"
                                       Padding="10"
                                       Grid.Row="4"
                                       HorizontalOptions="Center">
                    <Image Source="tutorial_3.png"
                           HeightRequest="100"/>
                    <Image Source="tutorial_31.png"
                           HeightRequest="100" />
                    <Image Source="tutorial_4.png"
                           HeightRequest="100" />
                </HorizontalStackLayout>
            </Grid>
        </ContentView>

        <!-- Clue Photo Modal  -->
        <ContentView x:Name="CluePhotoPromptModal"
                     IsVisible="False"
                     BackgroundColor="#CC000000"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Padding="20">
            <Grid VerticalOptions="Center"
                  HorizontalOptions="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="150" />
                    <RowDefinition Height="180" />
                    <RowDefinition Height="200" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <ResourceDictionary>
                        <Style x:Key="CommonLabelStyle"
                               TargetType="Label">
                            <Setter Property="FontFamily"
                                    Value="LuckiestGuy" />
                            <Setter Property="FontSize"
                                    Value="24" />
                            <Setter Property="TextColor"
                                    Value="White" />
                            <Setter Property="HorizontalOptions"
                                    Value="Center" />
                            <Setter Property="VerticalOptions"
                                    Value="Center" />
                            <Setter Property="HorizontalTextAlignment"
                                    Value="Center" />
                            <Setter Property="Shadow">
                                <Shadow Brush="Black"
                                        Offset="2,2"
                                        Radius="2" />
                            </Setter>
                        </Style>
                    </ResourceDictionary>
                </Grid.Resources>

                <!-- Code Display with Paper Background -->
                <Image Source="camera_page_frame.webp"
                       Grid.Row="1"
                       Grid.RowSpan="3"
                       HorizontalOptions="Center" />

                <Image Source="code_paper.webp"
                       HorizontalOptions="Center"
                       HeightRequest="120"
                       Rotation="3"
                       Grid.Row="1">
                    <Image.Shadow>
                        <Shadow Brush="Black"
                                Offset="7,7"
                                Radius="10" />
                    </Image.Shadow>
                </Image>

                <Label x:Name="ClueCodeLabel"
                       Rotation="3"
                       FontSize="50"
                       WidthRequest="200"
                       Style="{StaticResource CommonLabelStyle}"
                       Grid.Row="1" />

                <StackLayout Grid.Row="2"
                             VerticalOptions="Center"
                             Rotation="6">
                    <Label Text="Another Clue!"
                           FontSize="30"
                           Style="{StaticResource CommonLabelStyle}" />
                    <Label Text="Write down the code"
                           FontSize="27"
                           Style="{StaticResource CommonLabelStyle}" />
                    <Label Text="And hide it!"
                           FontSize="30"
                           Style="{StaticResource CommonLabelStyle}" />

                </StackLayout>

                <!-- Buttons with Press Animation -->
                <Grid HeightRequest="70"
                      Grid.Row="3"
                      Margin="30,0,0,0"
                      HorizontalOptions="Start"
                      Rotation="8">
                    <controls:NoRippleImageButton  x:Name="ClueNextButton"
                                                   Source="next_clue_button.webp"
                                                   BackgroundColor="Transparent"
                                                   WidthRequest="130"
                                                   HeightRequest="150" />
                    <ProgressBar x:Name="ClueLongPressProgress"
                                 Progress="0"
                                 ProgressColor="Green"
                                 VerticalOptions="End"
                                 ScaleY="36"
                                 HeightRequest="50"
                                 Opacity="0.6" />
                </Grid>

                <controls:NoRippleImageButton Source="finish_adventure_button.webp"
                                              Clicked="OnFinishAdventureClicked"
                                              BackgroundColor="Transparent"
                                              WidthRequest="130"
                                              HeightRequest="150"
                                              HorizontalOptions="End"
                                              Rotation="-9"
                                              Margin="0,0,30,0"
                                              Grid.Row="3" />

                <!-- Tutorial Popup 2 Image -->
                <HorizontalStackLayout Spacing="10"
                                       Padding="10"
                                       Grid.Row="4"
                                       HorizontalOptions="Center">
                    <Image Source="tutorial_3.png"
                           HeightRequest="100" />
                    <Image Source="tutorial_31.png"
                           HeightRequest="100" />
                    <Image Source="tutorial_4.png"
                           HeightRequest="100" />
                </HorizontalStackLayout>
            </Grid>
        </ContentView>
        
        <!-- final Photo -->
        <StackLayout x:Name="CompletionStack"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Spacing="10">
            <Image x:Name="CompletionImage"
                   Source="adventure_created.webp"
                   Opacity="0"
                   IsVisible="False"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Label x:Name="CompletionTitle"
                   Text="Adventure Created!"
                   FontFamily="LuckiestGuy"
                   FontSize="30"
                   TextColor="White"
                   Opacity="1"
                   IsVisible="False"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </StackLayout>
    </Grid>
</ContentPage>