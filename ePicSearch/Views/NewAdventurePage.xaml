<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ePicSearch.Views.NewAdventurePage">
    <StackLayout Padding="10" Spacing="20">
        <Label Text="Create a New Adventure" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="AdventureNameEntry" Placeholder="Enter adventure name" />

        <Button Text="Start New Adventure" Clicked="OnStartAdventureClicked" />

        <Label x:Name="ErrorMessage" Text="" TextColor="Red" IsVisible="False" />
    </StackLayout>
</ContentPage>